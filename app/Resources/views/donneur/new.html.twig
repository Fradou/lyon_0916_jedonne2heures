{% block body %}
    <div class="how_form_int col-xs-offset-2 col-xs-8 col-md-offset-4 col-md-4">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.name, {label:'Nom :', 'attr':{'class' : 'form-control'} })}}
            </div>
            <div class="form-group">
                {{ form_row(form.firstName, {label:'Prénom :', 'attr':{'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.mailAddress, {label:'Email :', 'attr':{'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.status, {label:'Statut :', 'attr':{'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.hour, {label:'Je désire donner un maximum de (heures) :', 'attr':{'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.town, {label:'Ville :', 'attr':{'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.country, {label:'Pays :', 'attr':{'class' : 'form-control'}}) }}
            </div>

            <p class="p_txt_form">En m'inscrivant, j'accepte de recevoir des nouvelles de The Booster.</p>

            {#<div class="row all_blsp_xs"></div>

            {% form_theme form 'EWZRecaptchaBundle:Form:ewz_recaptcha_widget.html.twig' %}

            {{ form_widget(form.recaptcha, { 'attr': {
                    'options' : {
                            'theme': 'red',
                            'type': 'image',
                            'size': 'normal'
                    },
            } }) }}

            <div class="row all_blsp_xs"></div>#}

            <input type="submit" value="S'inscrire" />
        {{ form_end(form) }}
            <div class="row all_blsp"></div>
    </div>
{% endblock %}
