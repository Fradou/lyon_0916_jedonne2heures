{% extends 'back/baseback.html.twig' %}

{% block body %}
    <h1>Donneur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ donneur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ donneur.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ donneur.firstName }}</td>
            </tr>
            <tr>
                <th>Adresse mail</th>
                <td>{{ donneur.mailAddress }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ donneur.town }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ donneur.country }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ donneur.status }}</td>
            </tr>
            <tr>
                <th>Heures</th>
                <td>{{ donneur.hour }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('donneur_index') }}">Retour à la liste</a>
        </li>
        <li>
            <a href="{{ path('donneur_edit', { 'id': donneur.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer entrée">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
