{% extends 'back/baseback.html.twig' %}

{% block body %}
    <h1>Entrepreneur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entrepreneur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entrepreneur.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ entrepreneur.firstName }}</td>
            </tr>
            <tr>
                <th>Adresse mail</th>
                <td>{{ entrepreneur.mailAddress }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ entrepreneur.town }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ entrepreneur.country }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ entrepreneur.company }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ entrepreneur.position }}</td>
            </tr>
            <tr>
                <th>Secteur</th>
                <td>{{ entrepreneur.activity }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entrepreneur_index') }}">Retour à la liste</a>
        </li>
        <li>
            <a href="{{ path('entrepreneur_edit', { 'id': entrepreneur.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer entrée">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
