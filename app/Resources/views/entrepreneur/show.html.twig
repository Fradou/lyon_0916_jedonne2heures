{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entrepreneur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entrepreneur.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entrepreneur.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ entrepreneur.firstName }}</td>
            </tr>
            <tr>
                <th>Mailadress</th>
                <td>{{ entrepreneur.mailAdress }}</td>
            </tr>
            <tr>
                <th>Town</th>
                <td>{{ entrepreneur.town }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ entrepreneur.country }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ entrepreneur.company }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ entrepreneur.position }}</td>
            </tr>
            <tr>
                <th>Activity</th>
                <td>{{ entrepreneur.activity }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entrepreneur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('entrepreneur_edit', { 'id': entrepreneur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
